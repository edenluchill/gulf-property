# Gulf Property - Production Environment Configuration
# 复制此文件为 .env.production 并填写实际的生产环境配置

# ============================================================================
# Application Settings
# ============================================================================
PORT=3000
NODE_ENV=production

# ============================================================================
# Database Configuration (PostgreSQL)
# ============================================================================
# 使用外部托管的 PostgreSQL 数据库（如 Hetzner Managed Database）
DB_HOST=your-db-host.example.com
DB_PORT=5432
DB_NAME=gulf_property
DB_USER=your_db_user
DB_PASSWORD=your_secure_db_password

# 数据库连接池配置
DB_POOL_MIN=2
DB_POOL_MAX=10

# ============================================================================
# API Keys
# ============================================================================
# Google Gemini API Key (用于 AI 处理)
# 获取地址: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================================================
# CORS Configuration
# ============================================================================
# 允许访问的前端域名（多个域名用逗号分隔，不要有空格）
CORS_ORIGIN=https://gulf-property.com,https://www.gulf-property.com

# ============================================================================
# Rate Limiting
# ============================================================================
# 时间窗口（毫秒）- 15分钟
API_RATE_LIMIT_WINDOW_MS=900000

# 每个时间窗口内的最大请求数
API_RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# Security
# ============================================================================
# JWT Secret (如果使用身份验证)
# JWT_SECRET=your_jwt_secret_here

# Session Secret (如果使用 session)
# SESSION_SECRET=your_session_secret_here

# ============================================================================
# Logging
# ============================================================================
# 日志级别: error, warn, info, debug
LOG_LEVEL=info

# ============================================================================
# File Upload
# ============================================================================
# 最大文件大小（字节）- 50MB
MAX_FILE_SIZE=52428800

# 上传目录
UPLOAD_DIR=/app/uploads

# ============================================================================
# Redis (可选 - 用于缓存和会话)
# ============================================================================
# REDIS_HOST=your-redis-host.example.com
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password

# ============================================================================
# Email (可选 - 用于通知)
# ============================================================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your_email_password
# SMTP_FROM=noreply@gulf-property.com

# ============================================================================
# External Services
# ============================================================================
# Cloudflare (如果需要直接集成)
# CLOUDFLARE_API_KEY=your_cloudflare_api_key
# CLOUDFLARE_ZONE_ID=your_zone_id

# Sentry (错误追踪 - 可选)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================================================================
# Feature Flags
# ============================================================================
# 启用调试模式
DEBUG=false

# 启用 API 文档 (Swagger/OpenAPI)
ENABLE_API_DOCS=false

# 启用性能监控
ENABLE_PERFORMANCE_MONITORING=true
